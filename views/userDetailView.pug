            img.u-avatar(src=user.avatarUrl)
            h4.profile__username=user.name
        if user.id === loggedUser.id
            .user-profile__btns
                a(href=`users${mRoutes.editProfile}`)
                    button ‚úèÔ∏è Edit Profile
                a(href=`users${mRoutes.changePassword}`)
                    button üîì Change Password
        .home-videos
            each item in user.videos
                +videoBlock({
                    id:item.id,
                    title:item.title,
                    views:item.views,
                    videoFile:item.videoFile
                })
