mixin videoPlayer(video={})
    .videoPlayer#jsVideoPlayer
        video(src=`/${video.src}`)
        .videoPlayer__controls
            .videoPlayer__column
                span#jsPlayButton
                    i.fas.fa-play
                input.videoPlayer__volume#jsVolume(type="range", step="0.1",min="0", max="1", value = "0.5")
                span#jsVolumeBtn
                    i.fas.fa-volume-up
                span
                    span#currentTime 00:00 
                        | /
                    span#totalTime 10:00
            .videoPlayer__column
                span#jsExpandBtn
                    i.fas.fa-expand